#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/macpoule/Documents/Code/recipya/nextgen-tailwind/templates/tailwind/node_modules/.pnpm/purgecss@4.0.3/node_modules/purgecss/bin/node_modules:/home/macpoule/Documents/Code/recipya/nextgen-tailwind/templates/tailwind/node_modules/.pnpm/purgecss@4.0.3/node_modules/purgecss/node_modules:/home/macpoule/Documents/Code/recipya/nextgen-tailwind/templates/tailwind/node_modules/.pnpm/purgecss@4.0.3/node_modules:/home/macpoule/Documents/Code/recipya/nextgen-tailwind/templates/tailwind/node_modules/.pnpm/node_modules:/home/macpoule/Documents/Code/recipya/nextgen-tailwind/templates/tailwind/node_modules:/home/macpoule/Documents/Code/recipya/nextgen-tailwind/templates/node_modules:/home/macpoule/Documents/Code/recipya/nextgen-tailwind/node_modules:/home/macpoule/Documents/Code/recipya/node_modules:/home/macpoule/Documents/Code/node_modules:/home/macpoule/Documents/node_modules:/home/macpoule/node_modules:/home/node_modules:/node_modules"
else
  export NODE_PATH="$NODE_PATH:/home/macpoule/Documents/Code/recipya/nextgen-tailwind/templates/tailwind/node_modules/.pnpm/purgecss@4.0.3/node_modules/purgecss/bin/node_modules:/home/macpoule/Documents/Code/recipya/nextgen-tailwind/templates/tailwind/node_modules/.pnpm/purgecss@4.0.3/node_modules/purgecss/node_modules:/home/macpoule/Documents/Code/recipya/nextgen-tailwind/templates/tailwind/node_modules/.pnpm/purgecss@4.0.3/node_modules:/home/macpoule/Documents/Code/recipya/nextgen-tailwind/templates/tailwind/node_modules/.pnpm/node_modules:/home/macpoule/Documents/Code/recipya/nextgen-tailwind/templates/tailwind/node_modules:/home/macpoule/Documents/Code/recipya/nextgen-tailwind/templates/node_modules:/home/macpoule/Documents/Code/recipya/nextgen-tailwind/node_modules:/home/macpoule/Documents/Code/recipya/node_modules:/home/macpoule/Documents/Code/node_modules:/home/macpoule/Documents/node_modules:/home/macpoule/node_modules:/home/node_modules:/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/purgecss.js" "$@"
else
  exec node  "$basedir/../../bin/purgecss.js" "$@"
fi
