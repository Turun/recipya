{
	"scripts": {
		"build": "pnpm run build:css && pnpm run build:js",
		"build:css": "tailwind -m --output ../../static/css/tailwind.css",
		"build:js": "esbuild index.js --bundle --minify --outfile=../../static/js/bundle.js",
		"watch-css": "tailwind -m --output ../../static/css/tailwind.css -w",
		"watch": "esbuild index.js --bundle --minify --outfile=../../static/js/bundle.js --watch"
	},
	"dependencies": {
		"picomodal": "^3.0.0",
		"toastify-js": "^1.11.2"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.2",
		"esbuild": "^0.14.25",
		"eslint": "^8.10.0",
		"postcss": "^8.4.8",
		"standard": "^16.0.4",
		"tailwindcss": "^3.0.23"
	}
}